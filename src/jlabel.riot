<jlabel>
	<label class="label fucfirst" for={props.field.id}>{i18n(props.field.label)}</label> 
    <span if={props.field.required} class="inputRequired mx-1"><i class="fas fa-asterisk fa-fw" aria-hidden="true"></i></span>
    <style>
        .label
        {
            font-size:1.3rem;
        }
        .inputRequired{
            color: red;
        }
    </style>
</jlabel>